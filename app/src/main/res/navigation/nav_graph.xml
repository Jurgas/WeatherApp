<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.weatheracc.ui.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_splashFragment_to_forecastListFragment2"
            app:destination="@id/forecastListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/forecastListFragment"
        android:name="com.example.weatheracc.ui.fragment.ForecastListFragment"
        android:label="ForecastListFragment"
        tools:layout="@layout/forecast_list_fragment">
        <action
            android:id="@+id/action_forecastListFragment_to_locationListFragment"
            app:destination="@id/locationListFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationListFragment"
        android:name="com.example.weatheracc.ui.fragment.LocationListFragment"
        android:label="location_list_fragment"
        tools:layout="@layout/location_list_fragment" />

</navigation>